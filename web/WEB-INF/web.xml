        <servlet-name>controllerpago</servlet-name>
        <url-pattern>/pago</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controllerpelicula</servlet-name>
        <url-pattern>/pelicula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controllerproyeccion</servlet-name>
        <url-pattern>/proyeccion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controllersala</servlet-name>
        <url-pattern>/sala</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controllerteatro</servlet-name>
        <url-pattern>/teatro</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
